model UserSocial {
  userId     String
  handle     String
  socialCode String
  social     Social @relation(fields: [socialCode], references: [codeName], onDelete: Cascade, map: "UserSocial_socialCode_fkey")
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade, map: "UserSocial_userId_fkey")

  @@id([userId, socialCode], map: "UserSocial_pkey")
  @@map("cms__user_socials")
  @@schema("public")
}

model UserRoles {
  userId String
  roleId Int
  role   Roles  @relation(fields: [roleId], references: [id], onDelete: Cascade, map: "UserRoles_roleId_fkey")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, map: "UserRoles_userId_fkey")

  @@id([userId, roleId], map: "UserRoles_pkey")
  @@map("cms__user_roles")
  @@schema("public")
}

model Roles {
  id        Int         @id(map: "Roles_pkey") @default(autoincrement())
  name      String      @unique(map: "Roles_name_key")
  UserRoles UserRoles[]

  @@map("cms__roles")
  @@schema("public")
}

model Social {
  name               String       @unique(map: "Social_name_key")
  url                String
  icon               String
  codeName           String       @id(map: "Social_pkey")
  profileLinkFormat  String
  profileEntryFormat String
  darkModeColor      String
  lightModeColor     String
  users              UserSocial[]

  @@map("cms__socials")
  @@schema("public")
}

model PostVersionHistory {
  id         Int      @id(map: "PostVersionHistory_pkey") @default(autoincrement())
  postId     Int
  userId     String
  action     String
  instanceAt DateTime @default(now())
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade, map: "PostVersionHistory_postId_fkey")
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "PostVersionHistory_userId_fkey")

  @@map("cms__post_version_histories")
  @@schema("public")
}

model PathwayTypes {
  id                Int                 @id(map: "pathwaytypes_pkey") @default(autoincrement())
  name              String              @db.VarChar(255)
  parentId          Int?
  description       String?
  pathwayCategories PathwayCategories[]
  parent            PathwayTypes?       @relation("PathwayTypesParentChild", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "pathwaytypes_parentid_fkey")
  children          PathwayTypes[]      @relation("PathwayTypesParentChild")

  @@map("pathway_categories")
  @@schema("public")
}

model PathwayCategories {
  pathwayId          Int
  pathwayTypeId      Int
  pathways           Pathway      @relation(fields: [pathwayId], references: [id], onDelete: Cascade, map: "PathwayCategories_pathwayId_fkey")
  pathway_categories PathwayTypes @relation(fields: [pathwayTypeId], references: [id], onDelete: Cascade, map: "PathwayCategories_pathwayTypeId_fkey")

  @@id([pathwayId, pathwayTypeId], map: "PathwayCategories_pkey")
  @@map("pathway__pathways_pathway_categories")
  @@schema("public")
}

enum PathwayType {
  ASYLUM
  VISA

  @@map("enum__pathway_type")
  @@schema("public")
}

enum PathwayPipelines {
  CITIZENSHIP
  RESIDENCY
  REUNIFICATION

  @@map("enum__pathway_pipeline")
  @@schema("public")
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED

  @@map("enum__cms_content_status")
  @@schema("public")
}

enum DocumentType {
  GENERAL
  FINANCIAL
  IDENTIFICATION
  EVIDENCE
  SUPPORTING
  SPONSORSHIP
  INSURANCE
  PLAN

  @@map("enum__pathway_document_type")
  @@schema("public")
}

enum TagColor {
  amber
  blue
  cyan
  emerald
  fuchsia
  green
  indigo
  lime
  orange
  pink
  purple
  red
  rose
  sky
  teal
  violet
  yellow
  zinc

  @@map("enum__tag_color")
  @@schema("public")
}

enum PathwayNoteType {
  GENERAL
  LIMITATION
  REQUIREMENT

  @@map("enum__pathway_note_type")
  @@schema("public")
}
