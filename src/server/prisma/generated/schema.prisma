generator client {
  provider = "prisma-client-js"
  output   = "../src/server/prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
  schemas  = ["public"]
}

model Country {
  code               String                         @id(map: "Country_pkey") @unique(map: "Country_code_key")
  name               String
  countryCurrencies  CountryCurrency[]
  countryLanguages   CountryLanguage[]
  restrictedPathways PathwayRestrictedNationality[]
  pathways           Pathway[]

  @@map("countries")
  @@schema("public")
}

model CountryLanguage {
  countryCode  String
  languageCode String
  country      Country  @relation(fields: [countryCode], references: [code], map: "CountryLanguage_countryCode_fkey")
  language     Language @relation(fields: [languageCode], references: [code], map: "CountryLanguage_languageCode_fkey")

  @@id([countryCode, languageCode], map: "CountryLanguage_pkey")
  @@map("country__languages")
  @@schema("public")
}

model CountryCurrency {
  countryCode  String
  currencyCode String
  country      Country  @relation(fields: [countryCode], references: [code], map: "CountryCurrency_countryCode_fkey")
  currency     Currency @relation(fields: [currencyCode], references: [code], map: "CountryCurrency_currencyCode_fkey")

  @@id([countryCode, currencyCode], map: "CountryCurrency_pkey")
  @@map("country__currencies")
  @@schema("public")
}

model Pathway {
  id                      Int                            @id(map: "Pathway_pkey") @default(autoincrement())
  countryCode             String
  name                    String
  link                    String
  description             String
  type                    PathwayType
  createdAt               DateTime                       @default(now())
  updatedAt               DateTime                       @default(dbgenerated("date(CURRENT_TIMESTAMP)")) @updatedAt
  currencyCode            String
  notes                   String[]                       @default([])
  limitations             String[]                       @default([])
  requirements            String[]                       @default([])
  restrictions            String[]                       @default([])
  duration                Json?                          @default("{\"max\": 0, \"min\": 0, \"note\": null}")
  processTime             Json?                          @default("{\"max\": 0, \"min\": 0, \"note\": null}")
  renewal                 Json?                          @default("{\"max\": 0, \"min\": 0, \"note\": null}")
  cost                    Json?                          @default("{\"max\": 0, \"min\": 0}")
  createdby               String
  documents               PathwayDocuments[]
  categories              PathwayCategories[]
  pipelines               PathwayPipeline[]
  restrictedNationalities PathwayRestrictedNationality[]
  country                 Country                        @relation(fields: [countryCode], references: [code], map: "Pathway_countryCode_fkey")
  currency                Currency                       @relation(fields: [currencyCode], references: [code], map: "Pathway_currencyCode_fkey")
  CMS_User                User                           @relation(fields: [createdby], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "pathway_userfkey")

  @@map("pathways")
  @@schema("public")
}

model PathwayPipeline {
  id        Int              @id(map: "PathwayPipeline_pkey") @default(autoincrement())
  pathwayId Int
  pipeline  PathwayPipelines
  note      String?
  pathway   Pathway          @relation(fields: [pathwayId], references: [id], onDelete: Cascade, map: "PathwayPipeline_pathwayId_fkey")

  @@map("pathway__pipelines")
  @@schema("public")
}

model PathwayRestrictedNationality {
  pathwayId   Int
  countryCode String
  note        String?
  country     Country @relation(fields: [countryCode], references: [code], onDelete: NoAction, map: "PathwayRestrictedNationality_countryCode_fkey")
  pathway     Pathway @relation(fields: [pathwayId], references: [id], onDelete: Cascade, map: "PathwayRestrictedNationality_pathwayId_fkey")

  @@id([pathwayId, countryCode], map: "PathwayRestrictedNationality_pkey")
  @@map("pathway__restricted_nationalities")
  @@schema("public")
}

model PathwayDocuments {
  id          Int       @id(map: "PathwayDocuments_pkey") @default(autoincrement())
  pathwayId   Int
  documentId  Int       @default(1)
  description String?
  cost        Decimal   @default(0.00)
  isRequired  Boolean   @default(true)
  link        String?
  title       String?
  document    Documents @relation(fields: [documentId], references: [id], onDelete: SetDefault, map: "PathwayDocuments_documentId_fkey")
  pathway     Pathway   @relation(fields: [pathwayId], references: [id], onDelete: Cascade, map: "PathwayDocuments_pathwayId_fkey")

  @@map("pathway__documents")
  @@schema("public")
}

model Currency {
  code              String            @id(map: "Currency_pkey") @unique(map: "Currency_code_key")
  name              String
  symbol            String
  countryCurrencies CountryCurrency[]
  pathways          Pathway[]

  @@map("currencies")
  @@schema("public")
}

model Documents {
  id               Int                @id(map: "Documents_pkey") @default(autoincrement())
  name             String
  description      String?
  type             DocumentType[]     @default([GENERAL])
  pathwayDocuments PathwayDocuments[]

  @@map("documents")
  @@schema("public")
}

model Language {
  code             String            @id(map: "Language_pkey") @unique(map: "Language_code_key")
  name             String
  countryLanguages CountryLanguage[]

  @@map("languages")
  @@schema("public")
}

model Post {
  id                   Int                  @id(map: "Post_pkey") @default(autoincrement())
  name                 String
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  authorId             String               @map("createdById")
  contentHTML          String
  contentText          String
  subtitle             String?
  slug                 String               @unique(map: "Post_slug_key")
  image                Boolean              @default(false)
  metaDescription      String?
  metaKeywords         String[]             @default([])
  status               ContentStatus        @default(DRAFT)
  contentDelta         String               @default("{}")
  imageExt             String?
  imageKey             String?
  postBlock            PostBlock[]
  tags                 PostTag[]
  postVersionHistories PostVersionHistory[]
  author               User                 @relation(fields: [authorId], references: [id], map: "Post_createdById_fkey")

  @@index([name, slug], map: "Post_name_slug_idx")
  @@map("cms__posts")
  @@schema("public")
}

model PostTag {
  postId Int
  tagId  Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade, map: "PostTag_postId_fkey")
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade, map: "PostTag_tagId_fkey")

  @@id([postId, tagId], map: "PostTag_pkey")
  @@map("cms__post_tags")
  @@schema("public")
}

model Tag {
  id        Int            @id(map: "Tag_pkey") @default(autoincrement())
  name      String
  parentId  Int?
  color     String         @default("grey")
  posts     PostTag[]
  childTag  TagHierarchy[] @relation("TagHierarchyChild")
  parentTag TagHierarchy[] @relation("TagHierarchyParent")
  parent    Tag?           @relation("TagToTag", fields: [parentId], references: [id], map: "Tag_parentId_fkey")
  children  Tag[]          @relation("TagToTag")

  @@index([name, parentId], map: "Tag_name_parentId_idx")
  @@map("tags")
  @@schema("public")
}

model TagHierarchy {
  id       Int @id(map: "TagHierarchy_pkey") @default(autoincrement())
  parentId Int
  childId  Int
  parent   Tag @relation("TagHierarchyChild", fields: [childId], references: [id], onDelete: Cascade, map: "TagHierarchy_childId_fkey")
  child    Tag @relation("TagHierarchyParent", fields: [parentId], references: [id], onDelete: Cascade, map: "TagHierarchy_parentId_fkey")

  @@unique([parentId, childId], map: "TagHierarchy_parentId_childId_key")
  @@map("tag__hierarchies")
  @@schema("public")
}

model Resource {
  id          Int      @id(map: "Resource_pkey") @default(autoincrement())
  name        String
  type        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  content     String
  author      User     @relation(fields: [authorId], references: [id], onDelete: NoAction, map: "Resource_authorId_fkey")

  @@map("resources")
  @@schema("public")
}

model Block {
  id         Int          @id(map: "Block_pkey") @default(autoincrement())
  slug       String       @unique(map: "Block_slug_key")
  name       String
  component  String
  type       String       @default("text")
  blockField BlockField[]
  postBlock  PostBlock[]

  @@index([name, slug], map: "Block_name_slug_idx")
  @@map("cms__blocks")
  @@schema("public")
}

model BlockField {
  id           Int     @id(map: "BlockField_pkey") @default(autoincrement())
  blockId      Int
  name         String
  type         String
  options      String?
  slug         String
  defaultValue String?
  block        Block   @relation(fields: [blockId], references: [id], onDelete: Cascade, map: "BlockField_blockId_fkey")

  @@unique([blockId, name], map: "BlockField_blockId_name_key")
  @@index([blockId, slug], map: "BlockField_blockId_slug_idx")
  @@map("cms__block_fields")
  @@schema("public")
}

model PostBlock {
  id       Int    @id(map: "PostBlock_pkey") @default(autoincrement())
  postId   Int
  blockId  Int
  type     String
  content  String
  position Int
  block    Block  @relation(fields: [blockId], references: [id], onDelete: Cascade, map: "PostBlock_blockId_fkey")
  post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade, map: "PostBlock_postId_fkey")

  @@index([postId, blockId], map: "PostBlock_postId_blockId_idx")
  @@map("cms__post_blocks")
  @@schema("public")
}

